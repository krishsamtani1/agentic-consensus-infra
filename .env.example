# TRUTH-NET Environment Configuration

# Server
PORT=3000
HOST=0.0.0.0
NODE_ENV=development
LOG_LEVEL=debug

# PostgreSQL
DATABASE_URL=postgresql://truthnet:truthnet@localhost:5432/truthnet
DATABASE_POOL_SIZE=10

# Redis
REDIS_URL=redis://localhost:6379
REDIS_PREFIX=tn:

# API Security
API_KEY_SALT_ROUNDS=12
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=60000

# Oracle Settings
ORACLE_POLL_INTERVAL_MS=60000
ORACLE_REQUEST_TIMEOUT_MS=10000
ORACLE_MAX_RETRIES=3

# Simulation Mode
SIMULATION_ENABLED=false
SIMULATION_AGENT_COUNT=10
SIMULATION_TICK_MS=1000

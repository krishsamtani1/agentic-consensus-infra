# TRUTH-NET Production Environment Configuration
# Copy this file to .env.production and fill in your values

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================

NODE_ENV=production
PORT=3001
HOST=0.0.0.0

# =============================================================================
# DATABASE (PostgreSQL)
# =============================================================================

DB_HOST=localhost
DB_PORT=5432
DB_NAME=truthnet
DB_USER=truthnet
DB_PASSWORD=your_secure_password_here
DB_SSL=false
DB_MAX_CONNECTIONS=20

# =============================================================================
# REDIS (Caching & Pub/Sub)
# =============================================================================

REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# =============================================================================
# NEWS & DATA SOURCES
# =============================================================================

# NewsAPI.org - Get key at https://newsapi.org/register
NEWS_API_KEY=your_newsapi_key_here

# GNews API - Get key at https://gnews.io/
GNEWS_API_KEY=your_gnews_key_here

# =============================================================================
# WEATHER APIs
# =============================================================================

# OpenWeatherMap - Get key at https://openweathermap.org/api
OPENWEATHER_API_KEY=your_openweather_key_here

# =============================================================================
# GITHUB API (for repo-based markets)
# =============================================================================

# GitHub Personal Access Token - Create at https://github.com/settings/tokens
GITHUB_TOKEN=your_github_token_here

# =============================================================================
# LLM PROVIDERS (for agent system prompts)
# =============================================================================

# OpenAI
OPENAI_API_KEY=your_openai_key_here

# Anthropic
ANTHROPIC_API_KEY=your_anthropic_key_here

# Azure OpenAI
AZURE_OPENAI_ENDPOINT=
AZURE_OPENAI_KEY=

# =============================================================================
# AUTHENTICATION & SECURITY
# =============================================================================

JWT_SECRET=generate_a_secure_random_string_at_least_32_chars
JWT_EXPIRES_IN=24h
CORS_ORIGIN=https://your-domain.com

# =============================================================================
# LOGGING & MONITORING
# =============================================================================

LOG_LEVEL=info
LOG_FORMAT=json

# Sentry (Error Tracking)
SENTRY_DSN=

# =============================================================================
# WEBSOCKET CONFIGURATION
# =============================================================================

WS_PORT=3001
WS_HEARTBEAT_INTERVAL=30000
WS_BINARY_MODE=true

# =============================================================================
# MATCHING ENGINE
# =============================================================================

# Use SharedArrayBuffer for zero-copy order book
USE_SHARED_MEMORY=true

# Maximum markets to track
MAX_MARKETS=100

# Order matching latency target (microseconds)
LATENCY_TARGET_US=100

# =============================================================================
# CIRCUIT BREAKERS
# =============================================================================

# Wash trading detection
WASH_TRADING_THRESHOLD=5
WASH_TRADING_WINDOW_MS=60000

# Max position per agent
MAX_POSITION_PER_AGENT=100000

# =============================================================================
# ORACLE & RESOLUTION
# =============================================================================

# Auto-resolution polling interval
RESOLVER_POLL_INTERVAL_MS=60000

# Discovery service interval
DISCOVERY_INTERVAL_MS=300000

# Controversy threshold for market generation
CONTROVERSY_THRESHOLD=0.6

# =============================================================================
# DOCKER / DEPLOYMENT
# =============================================================================

# For Docker Compose
COMPOSE_PROJECT_NAME=truthnet

# TRUTH-NET v2.0 Production Environment
# Copy this file to .env and fill in your values

# ============================================================================
# SERVER
# ============================================================================
PORT=3000
WS_PORT=3001
HOST=0.0.0.0
NODE_ENV=production
LOG_LEVEL=info

# ============================================================================
# FRONTEND URL (for CORS)
# ============================================================================
FRONTEND_URL=https://truthnet.com

# ============================================================================
# STRIPE (Payment Integration)
# ============================================================================
# Get these from https://dashboard.stripe.com/test/apikeys
STRIPE_SECRET_KEY=sk_test_your_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here
VITE_STRIPE_PUBLIC_KEY=pk_test_your_public_key_here

# ============================================================================
# AUTH
# ============================================================================
JWT_SECRET=change-this-to-a-random-64-char-string

# ============================================================================
# DATABASE (Railway PostgreSQL addon)
# ============================================================================
DATABASE_URL=postgresql://user:pass@host:5432/truthnet

# ============================================================================
# NEWS APIs (for Headline Factory)
# ============================================================================
NEWS_API_KEY=your_newsapi_org_key
GNEWS_API_KEY=your_gnews_key

# ============================================================================
# RATE LIMITING
# ============================================================================
RATE_LIMIT_MAX=200
RATE_LIMIT_WINDOW_MS=60000

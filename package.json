{
  "name": "truth-net",
  "version": "0.1.0",
  "description": "Agentic Consensus Infrastructure - Headless Truth Clearinghouse",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "dev:all": "concurrently \"npm run dev\" \"npm run dev:ui\"",
    "dev:ui": "cd ui && npm run dev",
    "build": "tsc",
    "build:ui": "cd ui && npm run build",
    "start": "node dist/index.js",
    "simulate": "tsx src/simulation/SimulationRunner.ts",
    "db:migrate": "tsx src/db/migrate.ts",
    "test": "vitest",
    "test:unit": "vitest run --dir tests/unit",
    "test:integration": "vitest run --dir tests/integration",
    "lint": "eslint src --ext .ts",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@fastify/cors": "^10.0.1",
    "@fastify/rate-limit": "^10.1.1",
    "@fastify/swagger": "^9.2.0",
    "@fastify/swagger-ui": "^5.1.0",
    "bullmq": "^5.25.0",
    "dotenv": "^16.4.5",
    "fastify": "^5.1.0",
    "ioredis": "^5.4.1",
    "jsonpath-plus": "^10.0.0",
    "msgpackr": "^1.11.8",
    "pg": "^8.13.0",
    "pino": "^9.5.0",
    "pino-pretty": "^11.3.0",
    "uuid": "^10.0.0",
    "ws": "^8.18.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "@types/pg": "^8.11.10",
    "@types/uuid": "^10.0.0",
    "@types/ws": "^8.5.13",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "concurrently": "^9.1.0",
    "eslint": "^9.0.0",
    "tsx": "^4.19.0",
    "typescript": "^5.6.0",
    "vitest": "^2.1.0"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "keywords": [
    "prediction-market",
    "ai-agents",
    "orderbook",
    "oracle",
    "consensus"
  ]
}
